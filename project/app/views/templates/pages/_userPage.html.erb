<script type="text/html" id="userPageTemplate">
  <div class="relative flex flex-grow text-white" style="margin-top:45px; margin:60px ">
    <div style="background-color:#115E59"
      class=" bg-teal-900 w-1/4 rounded-3xl flex flex-col flex-grow max-w-2xl hover:shadow-2xl transition-shadow ease-in-out duration-300">
		<div class="text-center px-16 h-16 bg-teal-900 flex flex-row justify-center items-center text-3xl relative">
			<div class="flex-1">
				{{name}}
			</div>
	  		<svg id="send-dm" class="w-8 h-8 text-white stroke-current cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
		</div>
		{{#avatar_url}}
			<img class="w-40 h-40 rounded-full p-2 mx-auto mt-6" src={{avatar_url}} alt="User avatar"/>
		{{/avatar_url}}
		{{^avatar_url}}
			<p class="text-center mt-6">No avatar availaible</p>
		{{/avatar_url}}
		<div class="pb-10 py-16 px-16 text-center">
			<h2 class="text-2xl mb-2">Account:</h2>
			<div>
				<div><span class="font-bold">Name: </span>{{login}}</div>
				<div><span class="font-bold">Creation date: </span>{{created_at}}</div>
				<div><span class="font-bold">Email: </span>{{email}}</div>
			</div>
			<div class="flex border border-gray-100 my-4"></div>
			<h2 class="text-2xl mb-2">Stats:</h2>
			<p>Nothing at the moment</p>
			<div class="flex border border-gray-100 my-4"></div>
			<h2 class="text-2xl mb-2">Guild:</h2>
			<div style='margin: auto; margin-bottom:20px; text-align: center'>
			{{#has_guild}}
			<p><span style='font-weight:bold'>{{guild_role}}</span> of the guild</p>
			<a style="text-decoration: underline" href="/guild/{{guild.id}}">
				{{#guild.img_url}}
					<img style='margin: auto; margin-top:10px' width="80" height="80" class="rounded-full p-2" src={{guild.img_url}}/>
				{{/guild.img_url}}
				{{^guild.img_url}}
					<img style='margin: auto; margin-top:10px' width="80" height="80" class="rounded-full p-2" src="https://img.pngio.com/circle-outline-png-transparent-circle-outline-png-image-free-white-circle-outline-transparent-300_300.png"/>
				{{/guild.img_url}}
			<p style='margin-bottom:20px'>{{guild.name}}</p></a>
			{{/has_guild}}
			{{^has_guild}}
			<p style='margin-bottom:20px;' class="justify-center flex">No guild at the moment</p>
			{{/has_guild}}
			</div>
		</div>
	</div>
  </div>
</script>
