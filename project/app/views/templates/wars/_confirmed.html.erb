<script type="text/html" id="confirmedWarTemplate">
	<h1 style="margin-top:10px;" class="justify-center flex flex-row  text-white"> Your guild is currently at war with: </h1>
	<div>
		<img style="margin-left: auto; margin-right: auto; margin-top:10px" width="100" height="100" class="flex flex-row rounded-full p-2" src="{{img}}" />
	</div>
	<a style="margin-top:10px; text-decoration: underline;" href="{{url}}" class="justify-center flex flex-row text-white">{{name}} </a>
	<h1 style="margin-top:10px; font-size: 11px;" class="flex flex-row text-white ml-5"> Prize : {{war.prize}} points </h1>
	<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Time to answer War Time Calls: {{war.time_to_answer}} minutes </h1>
	<h1 id="max-calls" style="font-size: 11px; display:none" class="flex flex-row text-white ml-5"> Max tolerable unanswered War Time calls: {{war.max_unanswered_calls}} </h1>
	<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Include ladder games: {{war.inc_ladder}} </h1>
	<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Include tournament games: {{war.inc_tour}} </h1>
	<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Include friendly games: {{war.inc_friendly}} </h1>
	{{#war.inc_friendly}}
		<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Friendly Games levels:
			{{#war.inc_easy}}
				easy
			{{/war.inc_easy}}
			{{#war.inc_normal}}
				normal
			{{/war.inc_normal}}
			{{#war.inc_hard}}
				hard
			{{/war.inc_hard}}
		</h1>
		<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5"> Friendly Games maximum points:
			{{#war.inc_three}}
				3
			{{/war.inc_three}}
			{{#war.inc_six}}
				6
			{{/war.inc_six}}
			{{#war.inc_nine}}
				9
			{{/war.inc_nine}}
		</h1>
	{{/war.inc_friendly}}
	<button class="underline text-white ml-5" style="font-size:11px;" id="wt-schedule">War Time Schedule</button>
	<div id="confirmed" style="display:none">
		<h1 class="justify-center flex flex-row text-white ml-5 mt-5"> War will start {{war.countStart}} </h1>
		<h1 class="justify-center flex flex-row text-white ml-5"> End: {{war.end}} </h1>
	</div>
	<div id="started" style="display:none;">
		<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5 mt-2"> Ends {{war.countEnd}} </h1>
		<h1 style="font-size: 11px;" class="flex flex-row text-white ml-5 mb-5"> Started on: {{war.start}} </h1>
		<h1 class="justify-center flex flex-row text-white" >My Guild points: {{war.warPoints}}</h1>
		<h1 class="justify-center flex flex-row text-white" >Opponent points: {{op_points}}</h1>
		<div id="wartime"></div>
	</div>
</script>
