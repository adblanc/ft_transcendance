<script type="text/html" id="userPageTemplate">
  <div class="flex"></div>

  <div style="background-color:#115E59; float:left; margin-top:40px; margin-left:50px; margin-right: 50px"
  class=" bg-teal-900 w-1/2 rounded-3xl flex flex-col flex-grow max-w-2xl hover:shadow-2xl transition-shadow ease-in-out duration-300 text-white"
	>
		<div class="text-center px-16 h-16 bg-teal-900 flex flex-row justify-center items-center text-3xl relative text-white py-5">
			<div class="flex-1 flex items-center justify-center">
				{{#is_current_user}}
					<button id="friends-btn" class="underline text-sm font-medium" type="button">{{ friends.length }} friends</button>
				{{/is_current_user}}
			</div>
			<div class="flex-1">
				{{name}}
			</div>
			<div class="flex-1 flex flex-row items-end justify-end">
				{{^is_current_user}}
					{{#no_relation}}
					<svg id="add-friend" class="w-8 h-8 text-white stroke-current cursor-pointer mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path></svg>
					{{/no_relation}}
					{{#has_received_friend}}
					<div class="tooltip">
						<span class="tooltiptext">You have sent a friend request</span>
						<svg class="w-8 h-8 mr-2" fill="none" stroke="#95A5A6" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path></svg>
					</div>
					{{/has_received_friend}}
					{{#has_requested_friend}}
					<div class="tooltip">
						<span class="tooltiptext">{{name}} sent you a friend request!</span>
						<a href="/user/{{cur}}">
							<svg class="w-8 h-8 mr-2 animate-bounce" fill="none" stroke="#95A5A6" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path></svg>
						</a>
					</div>
					{{/has_requested_friend}}
					{{#is_friend}}
					<svg id="remove-friend" class="w-8 h-8 text-white stroke-current cursor-pointer mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6"></path></svg>
					{{/is_friend}}
					<svg id="send-dm" class="w-8 h-8 text-white stroke-current cursor-pointer ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
				{{/is_current_user}}
				{{#is_current_user}}
					<button id="request-btn" class="underline text-sm font-medium" type="button">{{ friend_requests.length }} new friend requests</button>
				{{/is_current_user}}
			</div>
		</div>
		<img class="w-40 h-40 rounded-full p-2 mx-auto mt-6" src={{avatar_url}} alt="User avatar"/>
		{{^master}}
			{{#is_admin}}
				<div class="flex justify-center items-center">
					{{#ban}}
						<button class="btn-primary mt-8 mx-2" id="unban-user" type="button">Unban user</button>
					{{/ban}}
					{{^ban}}
						<button class="btn-primary mt-8 mx-2" id="ban-user" type="button">Ban user</button>
					{{/ban}}
					{{#admin}}
						<button class="btn-primary mt-8 mx-2" id="unadmin-user" type="button">Unmake admin</button>
					{{/admin}}
					{{^admin}}
						<button class="btn-primary mt-8 mx-2" id="admin-user" type="button">Make admin</button>
					{{/admin}}
				</div>

			{{/is_admin}}
		{{/master}}
		<div class="pb-10 pt-5 px-20 text-center">
			<h2 class="text-2xl mb-2 font-semibold">Account:</h2>
			<div>
				<div><span class="font-bold">Name: </span>{{login}}</div>
				<div><span class="font-bold">Creation date: </span>{{created_at}}</div>
				<div><span class="font-bold">Email: </span>{{email}}</div>
				<div><span class="font-bold">Account type: </span>{{#master}}Master{{/master}}{{^master}}{{#admin}}Admin{{/admin}}{{^admin}}Regular{{/admin}}{{/master}}</div>
				{{#ban}}
					<div><span class="font-bold">Banned on: </span>{{ban_time}}</div>
				{{/ban}}
			</div>
			<div class="flex border border-gray-100 my-4"></div>
			<h2 class="text-2xl font-semibold">Stats:</h2>
			<p>Rank on permanent ladder : {{ladder_rank}}</p>
			<p>Number of victory : {{statUser.number_victory}} </p>
			<p>Number of loss : {{statUser.number_loss}} </p>
			{{#statUser.lucky_man}} <p>Lucky Man : 5+ games won by forfeit </p>{{/statUser.lucky_man}}
			{{#statUser.achievement}}<p class="text-2xl mt-2 font-semibold">Achievements: </p> {{/statUser.achievement}}
			<div style="text-align: center;" class= "justify-center m-auto trophies-container mt-2 mb-2"</div>
			{{#statUser.bronze_medal}}
			<div class="tooltip">
				<span class="tooltiptext-white">10+ games won</span>
				<svg class="mr-3 w-5 fill-current" color="#eb6b34" stroke="currentColor" enable-background="new 0 0 512 512" viewBox="0 0 512 512" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m337.903 358.822 23.413-37.992 42.252-14.41 4.681-44.377 31.789-31.295-15.114-42.006 15.114-42.007-31.788-31.295-4.681-44.376-42.252-14.41-23.413-37.993-44.285 5.347-37.619-24.008-37.619 24.01-44.284-5.347-23.413 37.992-42.252 14.41-4.681 44.376-31.789 31.295 15.114 42.007-15.114 42.007 31.788 31.294 4.681 44.377 42.252 14.41 23.413 37.992 44.285-5.346 37.619 24.009 37.619-24.009zm-211.332-170.079c0-71.367 58.062-129.429 129.429-129.429s129.429 58.062 129.429 129.429-58.062 129.429-129.429 129.429-129.429-58.062-129.429-129.429z"/><path d="m256 89.333c-54.815 0-99.41 44.595-99.41 99.41s44.595 99.41 99.41 99.41 99.41-44.595 99.41-99.41-44.595-99.41-99.41-99.41z"/><path d="m211.299 384.568-52.68 6.36-27.833-45.167-9.462-3.226-40.813 127.566 73.475-4.041 57.485 45.94 33.828-105.732z"/><path d="m381.214 345.762-27.834 45.166-52.679-6.36-34 21.7 33.828 105.732 57.485-45.94 73.475 4.041-40.813-127.566z"/></svg>
			</div>
			{{/statUser.bronze_medal}}
			{{#statUser.silver_medal}}
			<div class="tooltip">
				<span class="tooltiptext-white">25+ games won</span>
				<svg class="mr-3 w-5 fill-current" color="#a4a2a6" stroke="currentColor" enable-background="new 0 0 512 512" viewBox="0 0 512 512" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m337.903 358.822 23.413-37.992 42.252-14.41 4.681-44.377 31.789-31.295-15.114-42.006 15.114-42.007-31.788-31.295-4.681-44.376-42.252-14.41-23.413-37.993-44.285 5.347-37.619-24.008-37.619 24.01-44.284-5.347-23.413 37.992-42.252 14.41-4.681 44.376-31.789 31.295 15.114 42.007-15.114 42.007 31.788 31.294 4.681 44.377 42.252 14.41 23.413 37.992 44.285-5.346 37.619 24.009 37.619-24.009zm-211.332-170.079c0-71.367 58.062-129.429 129.429-129.429s129.429 58.062 129.429 129.429-58.062 129.429-129.429 129.429-129.429-58.062-129.429-129.429z"/><path d="m256 89.333c-54.815 0-99.41 44.595-99.41 99.41s44.595 99.41 99.41 99.41 99.41-44.595 99.41-99.41-44.595-99.41-99.41-99.41z"/><path d="m211.299 384.568-52.68 6.36-27.833-45.167-9.462-3.226-40.813 127.566 73.475-4.041 57.485 45.94 33.828-105.732z"/><path d="m381.214 345.762-27.834 45.166-52.679-6.36-34 21.7 33.828 105.732 57.485-45.94 73.475 4.041-40.813-127.566z"/></svg>
			</div>
			{{/statUser.silver_medal}}
			{{#statUser.gold_medal}}
			<div class="tooltip">
				<span class="tooltiptext-white">50+ games won</span>
				<svg class="mr-3 w-5 fill-current" color="#ebbd34" stroke="currentColor" enable-background="new 0 0 512 512" viewBox="0 0 512 512" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m337.903 358.822 23.413-37.992 42.252-14.41 4.681-44.377 31.789-31.295-15.114-42.006 15.114-42.007-31.788-31.295-4.681-44.376-42.252-14.41-23.413-37.993-44.285 5.347-37.619-24.008-37.619 24.01-44.284-5.347-23.413 37.992-42.252 14.41-4.681 44.376-31.789 31.295 15.114 42.007-15.114 42.007 31.788 31.294 4.681 44.377 42.252 14.41 23.413 37.992 44.285-5.346 37.619 24.009 37.619-24.009zm-211.332-170.079c0-71.367 58.062-129.429 129.429-129.429s129.429 58.062 129.429 129.429-58.062 129.429-129.429 129.429-129.429-58.062-129.429-129.429z"/><path d="m256 89.333c-54.815 0-99.41 44.595-99.41 99.41s44.595 99.41 99.41 99.41 99.41-44.595 99.41-99.41-44.595-99.41-99.41-99.41z"/><path d="m211.299 384.568-52.68 6.36-27.833-45.167-9.462-3.226-40.813 127.566 73.475-4.041 57.485 45.94 33.828-105.732z"/><path d="m381.214 345.762-27.834 45.166-52.679-6.36-34 21.7 33.828 105.732 57.485-45.94 73.475 4.041-40.813-127.566z"/></svg>
			</div>
			{{/statUser.gold_medal}}
			</div>
			{{#statUser.best_guild}} <p>Best Guild </p>{{/statUser.best_guild}}
			{{#statUser.high_rank}} <p>Highest Ladder Rank </p>{{/statUser.high_rank}}
			{{#statUser.war_won}} <p>Your Guild won a War </p>{{/statUser.war_won}}
			<h2 id="tour-trophies" class="text-2xl mt-2 font-semibold">Trophies:</h2>
			<div id="trophies"></div>
			{{#has_guild}}
				<div class="flex border border-gray-100 my-4"></div>
				<h2 class="text-2xl mb-2 font-semibold">Guild:</h2>
				<div class="flex flex-col justify-center items-center">
					<p><span class="font-bold">{{guild_role}}</span> of the guild</p>
				<a class="underline" href="/guild/{{guild.id}}">
					<img class="rounded-full p-2 w-16 h-16 mt-2 mx-auto" src={{guild.img_url}}/>
					<p class="mb-2">{{guild.name}}</p>
				</a>
				<p><span class="font-bold">Guild contribution : {{contribution}}</span></p>
			{{/has_guild}}
		</div>
	</div>
  </div>
  <div style="background-color:#115E59; margin-top:40px;"
		class=" bg-teal-900 w-1/3 rounded-3xl flex flex-col flex-grow max-w-2xl max-h-2xl hover:shadow-2xl transition-shadow ease-in-out duration-300"
	>
		<div class="board-title">Game History</div>
		<div id="gamehistory"></div>
	</div>
</script>

